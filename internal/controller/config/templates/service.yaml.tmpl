apiVersion: v1
kind: Service
metadata:
  name: {{.Name}}
  namespace: {{.Namespace}}
  labels:
    app: {{.Name}}
    component: model-registry
    app.kubernetes.io/name: {{.Name}}
    app.kubernetes.io/instance: {{.Name}}
    app.kubernetes.io/component: model-registry
    app.kubernetes.io/created-by: model-registry-operator
    app.kubernetes.io/part-of: model-registry
    app.kubernetes.io/managed-by: model-registry-operator
    routing.opendatahub.io/exported: true
    platform.opendatahub.io/owner-name: {{.Name}}
    platform.opendatahub.io/owner-kind: ModelRegistry
spec:
  ports:
    - name: http-api
      port: {{.Spec.Rest.Port}}
      protocol: TCP
      appProtocol: http
    - name: grpc-api
      port: {{.Spec.Grpc.Port}}
      protocol: TCP
      appProtocol: grpc
  selector:
    app: {{.Name}}
    component: model-registry
  type: ClusterIP
